
#define MAX_VERTICES_SIZE 65535
#define MAX_INDICES_SIZE 65535

struct Vertex {
  vec3 position;
  vec3 normal;
  vec4 color;
};

struct Mesh {
  Vertex vertices[MAX_VERTICES_SIZE];
  uint indices[MAX_INDICES_SIZE];
  uint verticesLength;
  uint indicesLength;
  vec3 boundsCenter;
  float boundsRadius;
};

layout(set = 0, binding = 0) buffer InputData {
  Mesh meshes[];
};