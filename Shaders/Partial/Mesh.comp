#define MAX_VERTICES_SIZE 65535
#define MAX_INDICES_SIZE 65535

struct Vertex {
  vec4 Position; //4N
  vec4 Normal; //4N
};

struct MeshBufferData{
  uint VerticesSize; //1N
  uint IndiciesSize; //1N
  uint reserved1; //1N
  uint reserved2; //1N
  mat4 Transformation; //16N 
  mat4 NormalMatrix; //16N
  Vertex Verticies[MAX_VERTICES_SIZE]; //4N * MAX_VERTICES_SIZE
  uint Indicies[MAX_INDICES_SIZE]; //1N * MAX_INDICES_SIZE
};